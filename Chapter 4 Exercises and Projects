// 4.4

const randomNumber = Math.floor(Math.random() * 6);
let answer = "Your answer is not what you want";
let question = prompt("Ask the 8 Ball anything");
switch (randomNumber) {
  case 0:
    answer = "It has already been decided";
    break;
  case 1:
    answer = "The answer is within you";
    break;
  case 2:
    answer = "The answer is no";
    break;
  case 3:
    answer  = "The answer is yes";
    break;
  default:
    answer = "The answer is unsure";
}
let output = "You asked me " + question +" . I think that " + answer;
console.log(output);

// 4.5

let prize = prompt("Pick a number 0-10");
prize = Number(prize);
let output = "My Selection: ";
switch (prize){
  case 0:
    output += "Top Tier ";
  case 1:
    output += "Almost Top Tier ";
    break;
  case 2:
    output += "Kind of Top Tier ";
  case 3:
    output += "Mid at Best ";
  case 4:
    output += "Not Even Mid ";
  case 5:
    output += "Bottom Bro ";
    break;
  default:
    output += "You are a loser ";
}
console.log(output);


