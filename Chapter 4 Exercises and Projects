// Project 1

let val = prompt("What number are you thinking?");
val  = Number(val);
let num = 100;
let message = "nothing";
if (val > num) {
  message = val + " is greater than " + num;
} else if (val === num) {
  message = val + " is equal to " + num;
}
console.log(message);
console.log(message);

// Project 2

let person = prompt("Enter a name");
let message;
switch (person) {
  case "Kyle" :
  case "Karen" :
  case "Tara" :
  case "Bobby Joe" :
  message = person + " is my friend";
  break;
  default :
  message = "I do not know " + person;
}
console.log(message);


